<h1>Edit profile</h1>

<%= form_for @changeset, @action, [as: :user], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
<div>
  <%= label f, Pow.Ecto.Schema.user_id_field(@changeset) %>
  <%= text_input f, Pow.Ecto.Schema.user_id_field(@changeset), class: "areatext" %>
  <%= error_tag f, Pow.Ecto.Schema.user_id_field(@changeset) %>

  <%= label f, :current_password %>
  <%= password_input f, :current_password, class: "areatext" %>
  <%= error_tag f, :current_password %>

  <%= label f, :password %>
  <%= password_input f, :password, class: "areatext" %>
  <%= error_tag f, :password %>

  <%= label f, :password_confirmation %>
  <%= password_input f, :password_confirmation, class: "areatext" %>
  <%= error_tag f, :password_confirmation %>
</div>
</br>
</br>
  <div>
    <%= submit "Update", class: "dbtn" %>
  </div>
<% end %>
